{
    "status": 200,
    "message": "Please Verify your OTP!.",
    "generateOTP": 974665,
    "data": {
        "FirstName": "kavi",
        "_id": "5c5fefe2179de7285388fc5f",
        "otp": "974665",
        "mobileNumber": "84481666243",
        "LastName": "pal",
        "createdAt": "1549791202645",
        "__v": 0
    }
}


